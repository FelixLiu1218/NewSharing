<UserControl x:Class="Sharing.Controls.MarkDownPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sharing.Controls"
             xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
             xmlns:properties="clr-namespace:Sharing.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource ForegroundLightBrush}">

    <Grid>
        <FrameworkElement.CommandBindings>
            <CommandBinding Command="{x:Static markdig:Commands.Hyperlink}" Executed="CommandBinding_OnExecuted"></CommandBinding>
        </FrameworkElement.CommandBindings>

        <UniformGrid Columns="2" >
            <TextBox x:Name="Source" 
                     AcceptsReturn="True"/>
            <markdig:MarkdownViewer x:Name="Viewer" Markdown="{Binding Text,ElementName=Source}"/>
        </UniformGrid>

        <Button  HorizontalAlignment="Right" VerticalAlignment="Top"
                 FontSize="{StaticResource FontSizeXXXXLarge}"
                 Style="{StaticResource IconGrowButton}"
                Content="{StaticResource FontAwesomeClose}"/>

    </Grid>
</UserControl>
